{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Senior Citizens in each State of Malaysia",
  "data": {
  "url": "https://raw.githubusercontent.com/3arhead/3179-visualization/main/js/malaysia.json",
  "format": {"type": "topojson", "feature":"malaysia"}
  },
  "transform": [{
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/3arhead/3179-visualization/main/data/population.csv"
        },
        "key": "state",
        "fields": ["pop_60", "pop"]
      }
    },
    {"calculate": "datum.pop_60/datum.pop * 1000", "as": "Number of Seniors per 10000 people"}
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape"},
  "encoding": {
      "color": {
        "field": "Number of Seniors per 10000 people",
        "type": "quantitative",
        "scale": {
          "type": "threshold",
          "domain": [75, 110, 125, 150],
          "range": ["#fcb095","#fd8c6c","#f65840","#d62623","#a00d15"]
        }
      },
      "tooltip": [
        {"field": "properties.name", "type": "nominal", "title": "State"},
        {"field": "pop_60", "title": "Senior Citizens", "type": "quantitative"},
        {"field": "Number of Seniors per 10000 people", "type": "quantitative", "format": ".2f"}
      ]
  }
}
   